:3000 {

    # -----------------------
    # API reverse proxy
    # -----------------------
    handle /api/* {
        reverse_proxy api:3000
    }

    # -----------------------
    # Web SPA
    # -----------------------
    handle {
        root * /srv/web
        encode gzip
        file_server
        try_files {path} /index.html
    }

    log {
        output stdout
        format console
    }
}

# -----------------------
# Admin panel
# -----------------------
:3001 {
    root * /srv/admin
    encode gzip
    file_server
    try_files {path} /index.html

    log {
        output stdout
        format console
    }
}
