www.voltobahrain.online {
    redir https://voltobahrain.online{uri} permanent
}


www.admin.voltobahrain.online {
    redir https://admin.voltobahrain.online{uri} permanent
}



voltobahrain.online {

    # -----------------------
    # API reverse proxy
    # -----------------------
    handle /api/* {
        reverse_proxy api:3000
    }

    # -----------------------
    # Web SPA
    # -----------------------
    handle {
        root * /srv/web
        encode gzip
        file_server
        try_files {path} /index.html
    }

    log {
        output stdout
        format console
    }
}


admin.voltobahrain.online {
    root * /srv/admin
    encode gzip
    file_server
    try_files {path} /index.html

    log {
        output stdout
        format console
    }
}
